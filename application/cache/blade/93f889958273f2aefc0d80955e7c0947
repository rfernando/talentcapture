    <?php $__env->startSection('page-js'); ?>
            <!-- DataTables -->
    <script src="<?php echo admin_assets_url('plugins/datatables/jquery.dataTables.min.js'); ?>"></script>
    <script src="<?php echo admin_assets_url('plugins/datatables/dataTables.bootstrap.min.js'); ?>"></script>
    <script src="<?php echo admin_assets_url('plugins/iCheck/icheck.min.js'); ?>"></script>
    <script src="<?php echo admin_assets_url('plugins/select2/select2.full.min.js'); ?> "></script>



    <script>
        $(function () {

            $(".select2").select2({width : '100%' });
            var $editParentIdField = $("#edit-parent_id").select2({width : '100%' });

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            $('#example2').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "order": [[ 1, "desc" ]],
                "columnDefs": [
                    { "width": "1%", "targets": 0 },
                    {"targets": [0,3], "orderable": false, "searchable": false }
                ]
            });

            $('#example2').on('click','.edit-reject-option',function () {
                $('#edit-form').attr('action', $(this).data('url'));
                $('#edit-reject-option').val($(this).closest('tr').find('td.reject_option_val').text());
                $editParentIdField.val($(this).closest('tr').find('td.parent_id_val').data('parent_id')).trigger("change");
            });


        });

        function change_status(result, element) {
            var addClass = (result) ? 'label-success' : 'label-default';
            var removeClass = (result) ? 'label-default' : 'label-success';
            var text = (result) ? 'Active' : 'Inactive';
            element.removeClass(removeClass).addClass(addClass).text(text);
        }

        function validate_form(){

            var reject_option = $('#reject_option');
            var value = $.trim(reject_option.val());
            if(!value){
                reject_option.closest('.form-group').removeClass('has-success');
                reject_option.closest('.form-group').addClass('has-error');
            }else{
                reject_option.closest('.form-group').removeClass('has-error');
                reject_option.closest('.form-group').addClass('has-success');
            }
            return (value) ? true : false;
        }

        // Function is used only when add form is submitted via ajax.
        function add_charity_to_table(result, element){
            var dt = $('#example2').dataTable().api();
            var tbody = $('#example2 tbody');
            var tr = $.parseHTML('<tr><td class="center"><input type="checkbox" name="selectedRows[]" value="'+result.id+'"></td>'+
                    '<td>'+result.title+'</td>'+
                    '<td class="center"><label class="label label-success">Active</label></td>'+
                    '<td><a href="/'+result.id+'" class="btn btn-danger" onclick="return confirm(\'Do you really want to delete this Job charity ?\')"><i class="fa fa-trash"></i></a></td></tr>');
            tbody.append(tr);
            tr = tbody.find('tr').last();
            dt.row.add(tr);
            dt.draw();

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        }
    </script>
